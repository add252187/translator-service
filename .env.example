# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/translator_db
# For SQLite (development): sqlite:///./translator.db

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
WEBHOOK_BASE_URL=https://your-domain.com

# STT Provider Configuration
STT_PROVIDER=deepgram  # Options: deepgram, whisper, elevenlabs
DEEPGRAM_API_KEY=your_deepgram_key_here
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Translation Provider Configuration
TRANSLATION_PROVIDER=deepl  # Options: deepl, openai
DEEPL_API_KEY=your_deepl_key_here
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview
TRANSLATION_TIMEOUT=5  # seconds

# TTS Provider Configuration
TTS_PROVIDER=elevenlabs  # Options: elevenlabs, azure
ELEVENLABS_TTS_API_KEY=your_elevenlabs_tts_key_here
ELEVENLABS_VOICE_ID_SPANISH=voice_id_for_spanish
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
AZURE_TTS_KEY=your_azure_key_here
AZURE_TTS_REGION=westeurope

# Audio Configuration
AUDIO_SAMPLE_RATE=8000
AUDIO_CHUNK_DURATION_MS=500  # milliseconds
VAD_AGGRESSIVENESS=2  # 0-3, higher is more aggressive
AUDIO_BUFFER_SIZE=4096

# Performance Configuration
MAX_CONCURRENT_CALLS=50
WORKER_THREADS=4
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT=30  # seconds

# Language Configuration
DEFAULT_AGENT_LANGUAGE=es  # Spanish
BYPASS_TRANSLATION_FOR_SAME_LANGUAGE=false
LANGUAGE_DETECTION_CONFIDENCE_THRESHOLD=0.7

# Security
API_KEY_HEADER=X-API-Key
INTERNAL_API_KEY=your_internal_api_key_here
ENABLE_CORS=true
CORS_ORIGINS=["*"]

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_CONVERSATION_CONTENT=false  # Set to false in production for privacy
